<div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-sm-center gap-3 mt-5">
    <MudText Class="text-nowrap mb-2 mb-sm-0" Typo="Typo.body1">@Title</MudText>
    <div class="bg-body-secondary line d-none d-lg-block" style="min-height: 2px; width: 100%;"></div>

    <MudButton
        Variant="Variant.Filled"
        Color="Color.Primary"
        StartIcon="@Icons.Material.Filled.CloudUpload"
        OnClick="NavigateToDetail">
        @ButtonText
    </MudButton>
</div>

@code {
    [Inject] Microsoft.AspNetCore.Components.NavigationManager Nav { get; set; }

    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string ButtonText { get; set; } = string.Empty;
    [Parameter] public EventCallback<Microsoft.AspNetCore.Components.Forms.IBrowserFile> FilesChanged { get; set; }

    private async Task HandleFilesChanged(Microsoft.AspNetCore.Components.Forms.IBrowserFile file)
    {
        if (file == null)
            return;

        if (FilesChanged.HasDelegate)
            await FilesChanged.InvokeAsync(file);
    }

    void NavigateToDetail()
    {
        var slug = Slugify(Title);
        Nav.NavigateTo($"/upload-document/{slug}");
    }

    private static string Slugify(string input)
    {
        if (string.IsNullOrWhiteSpace(input))
            return "document";

        var normalized = input.Normalize(System.Text.NormalizationForm.FormD);
        var sb = new System.Text.StringBuilder();
        foreach (var ch in normalized)
        {
            var cat = System.Globalization.CharUnicodeInfo.GetUnicodeCategory(ch);
            if (cat != System.Globalization.UnicodeCategory.NonSpacingMark)
                sb.Append(ch);
        }
        var cleaned = sb.ToString().Normalize(System.Text.NormalizationForm.FormC).ToLowerInvariant();

        cleaned = System.Text.RegularExpressions.Regex.Replace(cleaned, @"[^a-z0-9]+", "-");
        cleaned = System.Text.RegularExpressions.Regex.Replace(cleaned, @"\-{2,}", "-").Trim('-');

        return string.IsNullOrEmpty(cleaned) ? "document" : cleaned;
    }
}
