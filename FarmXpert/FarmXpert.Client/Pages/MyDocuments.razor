@page "/my-documents"
@rendermode InteractiveWebAssembly
@inject IJSRuntime Js

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-6 px-3 px-md-0 mx-auto">
    <MudText Typo="Typo.h4" Class="fw-bold" GutterBottom="true">My Documents</MudText>
</MudContainer>

<MudContainer MaxWidth="MaxWidth.Large" Style="padding-bottom: 2.5rem;" Class="px-3 px-md-0 mx-auto">
    <div style="margin-bottom: 1.5rem;">
        <MudTextField @bind-Value="searchQuery"
                      Placeholder="Search documents..."
                      Variant="Variant.Outlined"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Class="mt-4 w-100" />
    </div>

    @if (filteredDocuments.Any())
    {
        <div class="grid-container">
            @foreach (var (doc, index) in filteredDocuments.Select((doc, i) => (doc, i)))
            {
                <MudPaper Class="d-flex flex-column position-relative"
                          Style="cursor: pointer; height: 100%; justify-content: space-between;">
                    <div>
                        <div class="bg-body-secondary d-flex justify-content-center align-items-center p-4">
                            <MudIcon Style="font-size: 5rem;"
                                     Icon="@Icons.Material.Filled.InsertDriveFile" />
                        </div>

                        <div class="pa-4" style="text-align: left;">
                            <MudText Class="fw-bold" Typo="Typo.body1">@doc.Title</MudText>
                        </div>
                    </div>

                    <div class="px-4 pb-3 pt-1 d-flex align-items-center justify-content-between">
                        <div class="d-flex gap-1 align-items-center">
                            <MudIcon Icon="@Icons.Material.Filled.DateRange" Size="Size.Small" />
                            <MudText Typo="Typo.caption">
                                @doc.Date.ToString("dd/MM/yyyy")
                            </MudText>
                        </div>

                        <MudIconButton Icon="@Icons.Material.Filled.MoreVert"
                                       Size="Size.Small"
                                       OnClick="@(() => OpenOverlay(index))" />
                    </div>
                </MudPaper>
            }

            @* Add Document card *@
            <MudPaper Class="d-flex position-relative"
                      Style="cursor: pointer; height: 100%;"
                      @onclick="ToggleInlineAddForm">
                <div class="d-flex justify-content-center align-items-center w-100"
                     style="min-height: 10rem;">
                    <MudIcon Icon="@Icons.Material.Filled.Add"
                             Color="Color.Primary"
                             Style="font-size: 5rem;" />
                </div>
            </MudPaper>
        </div>
    }
    else
    {
        <div class="d-flex flex-column justify-center align-center text-center" style="height: 50vh;">
            <MudIcon Icon="@Icons.Material.Filled.FolderOff"
                     Size="Size.Large"
                     Color="Color.Default"
                     Class="mb-4"
                     Style="font-size: 4rem; opacity: 0.5;" />
            <MudText Typo="Typo.h5" Class="mb-2">No documents</MudText>
            <MudText Typo="Typo.body1" Color="Color.Secondary">No matching documents found.</MudText>
        </div>
    }

    @* Inline add form *@
    @if (_showInlineAddForm)
    {
        <MudPaper Class="p-4 mt-3">
            <MudText Typo="Typo.h6" Class="mb-3">Add new document</MudText>

            <MudTextField @bind-Value="_newDocumentTitle"
                          Label="Document title"
                          Variant="Variant.Outlined"
                          Class="mb-3 w-100" />

            <div class="mb-3">
                <label for="newDocUpload"
                       class="mud-button-root mud-button mud-button-filled mud-button-filled-primary d-inline-flex align-items-center gap-2">
                    <MudIcon Icon="@Icons.Material.Filled.CloudUpload" />
                    <span>Choose file</span>
                </label>
                <InputFile id="newDocUpload"
                           class="d-none"
                           OnChange="@OnNewDocumentUpload"
                           accept=".pdf,.jpg,.jpeg,.png" />

                @if (_newDocumentFile is not null)
                {
                    <MudText Typo="Typo.caption" Class="mt-2 d-block">
                        Selected: @_newDocumentFile.Name (@(Math.Round(_newDocumentFile.Size / 1024.0, 1)) KB)
                    </MudText>
                }
            </div>

            <div class="d-flex gap-2">
                <MudButton Variant="Variant.Text"
                           Color="Color.Default"
                           OnClick="@(() => _showInlineAddForm = false)">
                    Cancel
                </MudButton>
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           Disabled="@(string.IsNullOrWhiteSpace(_newDocumentTitle) || _newDocumentFile is null)"
                           OnClick="@ConfirmAddDocument">
                    Save
                </MudButton>
            </div>
        </MudPaper>
    }
</MudContainer>

@if (openOverlayIndex is not null)
{
    <MudOverlay Visible="true" DarkBackground="true" Class="d-flex justify-center align-center">
        <MudPaper Class="p-3" Style="min-width: 16rem;">
            <MudText Typo="Typo.h6" Class="mb-2">Choose an action</MudText>

            <MudButton
                Variant="Variant.Filled"
                StartIcon="@Icons.Material.Filled.Download"
                DropShadow="false"
                OnClick="@(() => OnDownload(openOverlayIndex.Value))"
                Class="w-100 mb-2">
                Download
            </MudButton>

            <MudButton
                Variant="Variant.Filled"
                Color="Color.Error"
                StartIcon="@Icons.Material.Filled.Delete"
                DropShadow="false"
                OnClick="@(() => OnDelete(openOverlayIndex.Value))"
                Class="w-100">
                Delete
            </MudButton>

            <MudButton
                Variant="Variant.Text"
                OnClick="@CloseOverlay"
                Class="mt-2 w-100">
                Cancel
            </MudButton>
        </MudPaper>
    </MudOverlay>
}

<style>
    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(16rem, 1fr));
        gap: 1rem;
        justify-content: center;
        align-items: stretch;
    }
</style>

