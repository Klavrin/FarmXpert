    private IEnumerable<DocumentItem> filteredDocuments =>
        documents.Where(d => string.IsNullOrWhiteSpace(searchQuery) ||
                             d.Title.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));

    private int? openOverlayIndex;

    private void OpenOverlay(int index) => openOverlayIndex = index;

    private void CloseOverlay() => openOverlayIndex = null;

    private async void OnDownload(int index)
    {
        var doc = filteredDocuments.ElementAt(index);

        if (doc.Title == "Declaration on own responsibility")
        {
            var pdfBase64 =
                "";

            await Js.InvokeVoidAsync("downloadFile",
                "Declaration_on_own_responsibility.pdf",
                "application/pdf",
                pdfBase64
            );
        }

        CloseOverlay();
    }

    private void OnDelete(int index)
    {
        Console.WriteLine($"Delete document {filteredDocuments.ElementAt(index).Title}");
        CloseOverlay();
    }

    // Inline add form state (replaces MudDialog)
    private bool _showInlineAddForm;
    private string _newDocumentTitle = string.Empty;
    private IBrowserFile? _newDocumentFile;

    private void ToggleInlineAddForm()
    {
        _newDocumentTitle = string.Empty;
        _newDocumentFile = null;
        _showInlineAddForm = !_showInlineAddForm;
    }

    private void OnNewDocumentUpload(InputFileChangeEventArgs e)
    {
        _newDocumentFile = e.File;
    }

    private async Task ConfirmAddDocument()
    {
        if (string.IsNullOrWhiteSpace(_newDocumentTitle) || _newDocumentFile is null)
            return;

        documents.Add(new DocumentItem
        {
            Title = _newDocumentTitle,
            Date = DateTime.Now
        });

        var key = $"uploaded:{_newDocumentTitle}";
        await Js.InvokeVoidAsync("localStorage.setItem", key, "true");

        _showInlineAddForm = false;
    }

    private class DocumentItem
    {
        public required string Title { get; set; }
        public DateTime Date { get; set; }
    }
}
