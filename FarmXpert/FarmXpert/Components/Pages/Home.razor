@page "/"

<PageTitle>Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-6">
    <MudGrid Spacing="3">
        @foreach (var post in posts)
        {
            <MudItem xs="12" sm="6">
                <MudCard Class="h-full w-100">
                    <MudButton Variant="Variant.Text" Class="p-0 w-100 text-left" Style="text-transform:none;">
                        <MudCardContent Style="text-align: start">
                            <MudText Typo="Typo.h6" Class="mb-2">
                                @post.Title
                            </MudText>
                            <MudText Typo="Typo.body2">
                                @post.Description
                            </MudText>
                            
                            <div class="w-100 pt-4 text-secondary" style="text-align: end;">
                                <span>Learn more...</span>
                            </div>
                        </MudCardContent>
                    </MudButton>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
</MudContainer>

@code {
    private List<Post> posts = new()
    {
        new Post
        {
            Title = "Subsidy for Agricultural Equipment",
            Description = "Financial support for purchasing modern agricultural machinery to improve productivity."
        },
        new Post
        {
